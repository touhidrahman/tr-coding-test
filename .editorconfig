# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true

[{*.json,*.yml}]
indent_style = space

[{*.md,*.markdown}]
trim_trailing_whitespace = false

[{package.json,package-lock.json}]
indent_size = 2
