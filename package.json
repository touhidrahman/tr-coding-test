{
  "name": "tr-coding-test",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve & ngtw watch",
    "build": "npx ngtw build && ng build",
    "build:prod": "npx ngtw --purge build && ng build --prod",
    "build:tailwind": "npx ngtw build",
    "test": "ng test",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "precommit": "lint-staged",
    "format:ts": "prettier --write 'src/**/*.{js,ts,scss,css,less,jsx,tsx,json}'",
    "format:html": "prettier --write --print-width 100 'src/**/*.{html,xml}'",
    "format:specs": "prettier --write 'e2e/**/*.*'",
    "format": "npm run format:ts && npm run format:html && npm run format:specs",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~9.1.0",
    "@angular/common": "~9.1.0",
    "@angular/compiler": "~9.1.0",
    "@angular/core": "~9.1.0",
    "@angular/forms": "~9.1.0",
    "@angular/platform-browser": "~9.1.0",
    "@angular/platform-browser-dynamic": "~9.1.0",
    "@angular/router": "~9.1.0",
    "hammerjs": "^2.0.8",
    "ngx-toastr": "^12.0.1",
    "rxjs": "~6.5.4",
    "tslib": "^1.11.1",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.901.0",
    "@angular/cli": "~9.1.0",
    "@angular/compiler-cli": "~9.1.0",
    "@angular/language-service": "~9.1.0",
    "@types/jasmine": "~3.5.10",
    "@types/jasminewd2": "~2.0.8",
    "@types/node": "^13.9.5",
    "codelyzer": "^5.2.2",
    "husky": "^4.2.3",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~5.0.1",
    "karma": "~6.3.14",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~2.1.1",
    "karma-jasmine": "~3.1.1",
    "karma-jasmine-html-reporter": "^1.5.3",
    "lint-staged": "^10.0.10",
    "ng-tailwindcss": "^2.2.0",
    "prettier": "^2.0.2",
    "protractor": "~5.4.3",
    "tailwindcss": "^1.2.0",
    "ts-node": "~8.8.1",
    "tslint": "~6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "~3.8.3"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 4,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "always"
  },
  "lint-staged": {
    "*.ts": "tslint --fix",
    "*.{js,ts,scss,css,less,jsx,tsx,json}": "prettier --write",
    "*.{html,xml}": "prettier --write --print-width 100"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit",
      "pre-push": ""
    }
  }
}
